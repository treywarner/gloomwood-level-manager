<Window x:Class="Gloomwood_Level_Manager.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gloomwood_Level_Manager"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="250" Width="500">
	<Grid>
		<Label Content="Level Archive Directory:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0"/>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,40,0,0">
      <TextBox x:Name="levelsDirectoryTextBox"/>
      <Button Content="Browse" Click="BrowseLevelButton_Click"/>
    </StackPanel>

		<Label Content="Gloom Directory:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,80,0,0"/>
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,100,0,0">
			<TextBox x:Name="gloomDirectoryTextBox" />
			<Button Content="Browse" Click="BrowseGloomButton_Click"/>
     </StackPanel>

		<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,20">
			<Button Content="Save" Click="SaveButton_Click" Margin="0,0,10,0"/>
			<Button Content="Cancel" Click="CancelButton_Click"/>
		</StackPanel>
	</Grid>
</Window>
